{
  "ENVIRONMENT": "PROD",
  "API": {
    "baseUrl": "/map-tryouts/data"
  },
  "DATA": {
    "sensors": "/map-tryouts/data/sensors.mock.json",
    "greenzones": "/map-tryouts/data/greenzones.mock.json"
  },
  "FEATURES": {
    "enableHeatmap": false,
    "enableGreenZones": false
  },
  "MAP": {
    "controls_settings": {
      "layer_toggle": { 
        "enabled": true, 
        "label": "DASHBOARD_MAP_CONTROLS_LAYERS", 
        "icon": "üóÇÔ∏è",
        "tooltip": "DASHBOARD_MAP_TOOLTIPS_LAYERS",
        "shortcut": "L",
        "items": ["airQuality"]
      }
    },
    "map_controls": {
      "primary_toolbar": {
        "position": "topright",
        "elements": [
          {
            "type": "toggle",
            "items": ["layer_toggle"]
          },
          {
            "type": "toggle",
            "items": ["measurement"]
          },
          {
            "type": "toggle",
            "items": ["fullscreen"]
          },
          {
            "type": "toggle",
            "items": ["base_map_selector"]
          }
        ]
      }
    },
    "map_settings": {
      "center": [41.1579, -8.6291],
      "zoom": 13,
      "maxZoom": 18,
      "minZoom": 5
    }
  },
  "PERFORMANCE": {
    "cache": {
      "enabled": true,
      "ttl": 600000
    },
    "compression": true
  },
  "SECURITY": {
    "cors": {
      "enabled": true,
      "origins": ["joperafe.github.io"]
    },
    "rate_limiting": {
      "enabled": true,
      "requests_per_minute": 100
    }
  }
}
